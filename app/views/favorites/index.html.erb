<% books_id = [] %>
<% @favorite_books.each{ |favorites| books_id.push(favorites.book_id) } %>

<% books = [] %>

<% books_id.each do |book| %>
  <% books.push(Book.find(book)) %>
<% end %>

<% books.each do |book| %>
  <% if book.cover.attached? %>
    <%= image_tag book.cover, width: "250pt" %>
  <% else %>
    <%= image_tag("NoBookCover.png", option = {height: "250pt"}) %>
  <% end %>
<% end %>

