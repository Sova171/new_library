= simple_form_for author do |f|
  .form-group.mb-2
    = f.file_field :avatar, include_blank: true
  .form-group.mb-2
    = f.label t('.books')
    = f.collection_select :book_ids, Book.order(:title), :id, :title, {}, { class: 'dropdown', multiple: true }
  .form-group.mb-2
    = f.label t('.birthday')
    = f.date_select :date_of_birth, start_year: 1800, end_year: Time.now.year
  .form-group.mb-2
    - author.errors.full_messages_for(:full_name).each do |message|
      %div= message
    = f.text_field :full_name, class: 'form-control w-50', placeholder: t('.name')
  .form-group.mb-2
    = f.text_area :biography, class: 'form-control w-50', placeholder: t('.biography')
  .form-group.mb-2
    = f.button :submit, class: 'btn btn-outline-success'
