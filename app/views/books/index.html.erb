<h1 class='card-title'>Books</h1>

<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group mb-2">
    <%= search_field_tag :search, params[:search], placeholder: "Search books", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag "Search", :class => 'btn btn-outline-success', :name => nil%>
    </div>
  </div>
<%end %>

<% @books.each do |book| %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
    </div>
  </div>
<% end %>

<%= link_to "New book", new_book_path %>