.align-center
  %strong= t('.favorite')
  - if !user_signed_in? || !@facade.book.followed_by?(current_user)
    = link_to image_tag('star-empty.jpg', option = {height: '25px'}),
      book_favorites_path(book_id: book), method: :post
  - else
    = link_to image_tag('star.jpg', option = {height: '25px'}),
      book_favorites_path(book_id: book), method: :delete
