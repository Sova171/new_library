%h2.card-title= t('.lists')
%h4
  .align-center= link_to t('.add_list'), new_list_path
- if @facade.lists.blank?
  %h4
    .align-center= t('.empty')
- else
  - @facade.lists.each do |list|
    .card.mb-2
      .card-body
        .align-center= link_to list.name, list_path(list)
        = link_to t('.delete_list'), list_path(list), method: :delete, data: { confirm: t('.confirmation') }, class: "text-danger"
