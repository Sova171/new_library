<strong>Add a list:</strong>
<%= form_with model: [ current_user, current_user.lists.build ] do |form| %>

  <div class="form-group mb-2">
    <%= form.text_field :name, class: 'form-control', placeholder: "Name of list" %>
  </div>

  <div class="form-group mb-2">
    <%= form.button :submit, class: 'btn btn-outline-success' %>
  </div>
<% end %>

<%= link_to "Back", user_lists_path, class: 'btn btn-outline-secondary btn-sm' %>